{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "dist", "node_modules"],
  "exec": "ts-node --esm src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": false,
  "restartable": "rs",
  "colours": true,
  "stdout": true,
  "stderr": true,
  "signal": "SIGUSR2",
  "killTimeout": 8000,
  "legacyWatch": false
}
