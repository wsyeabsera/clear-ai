{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist-lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/components/**/*",
    "src/services/**/*",
    "src/utils/**/*",
    "src/hooks/**/*",
    "src/themes/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist-lib",
    "dist",
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*",
    "src/stories/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.tsx"
  ]
}
